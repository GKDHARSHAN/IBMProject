pipeline {
    agent any
    environment {
        SLACK_CHANNEL = '#general'  
        SLACK_COLOR = 'good'        
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    ##error 'Build failed intentionally!'
                    // Add build steps here
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Add test steps here
                }
            }
        }
    }
    post {
        success {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: 'good', 
                    message: "Build successful! :white_check_mark:",
                    username: 'jenkins',
                    iconEmoji: ':tada:'
                )
            }
        }
        failure {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: 'danger', 
                    message: "Build failed! :x:",
                    username: 'jenkins',
                    iconEmoji: ':no_entry_sign:'
                )
            }
        }
    }
}
