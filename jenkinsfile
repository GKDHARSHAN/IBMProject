pipeline {
    agent any
    stages {
        stage('Send Slack Notification') {
            steps {
                script {
                    sh '''
                    curl -X POST -H 'Content-type: application/json' \
                    --data '{"text":"Pipeline completed successfully"}' \
                    https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
                    '''
                }
            }
        }
    }
}

