pipeline {
    agent any
    environment {
        JIRA_SITE = 'jenkins-jira'  // Must match JIRA Site Name in Jenkins
        JIRA_ISSUE = 'MJP-1'  // Updated with new issue key
    }
    stages {
        stage('Verify JIRA Access') {
            steps {
                script {
                    try {
                        jiraComment site: JIRA_SITE, issueKey: JIRA_ISSUE, comment: "✅ Jenkins Pipeline is working with MJP-1!"
                        echo "✅ JIRA Access Verified!"
                    } catch (Exception e) {
                        echo "❌ JIRA Access Failed: ${e.getMessage()}"
                    }
                }
            }
        }
    }
}
