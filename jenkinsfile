pipeline {
    agent any
    environment {
        SLACK_CHANNEL = '#general'  
        SLACK_COLOR_SUCCESS = 'good'        
        SLACK_COLOR_FAILURE = 'danger'
        JIRA_SITE = 'jenkins-jira'  // Use your actual Jira site name
        JIRA_ISSUE = 'SMS-8' // Replace with your Jira issue ID
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    // error 'Build failed intentionally!'  // Uncomment to force failure
                }
            }
        }
    }
    post {
        success {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: SLACK_COLOR_SUCCESS, 
                    message: "✅ Build successful! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':tada:'
                )
                jiraAddComment(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    comment: "✅ Build Successful! Build ID: ${env.BUILD_NUMBER}"
                )
                jiraTransitionIssue(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    transition: "Done"
                )
            }
        }
        failure {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: SLACK_COLOR_FAILURE, 
                    message: "❌ Build failed! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':no_entry_sign:'
                )
                jiraAddComment(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    comment: "❌ Build Failed! Build ID: ${env.BUILD_NUMBER}"
                )
                jiraTransitionIssue(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    transition: "Reopen"
                )
            }
        }
    }
}
