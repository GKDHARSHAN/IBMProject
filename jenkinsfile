pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
    }
    post {
        always {
            slackSend(
                channel: '#general',
                color: 'good', 
                message: "Build Successfull!",
                tokenCredentialId: 'slack-token-id',
            )
        }
    }
}
