pipeline {
    agent any
    environment {
        JIRA_SITE = 'MyJiraSite'  // This matches your JIRA site name configured in Jenkins
        JIRA_ISSUE = 'PROJECT-123'  // Replace with your actual JIRA issue key
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    // Add build steps here
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Add test steps here
                }
            }
        }
    }
    post {
        success {
            script {
                // Add comment to JIRA issue when build is successful
                jiraAddComment(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    comment: "✅ Build successful! Build ID: ${env.BUILD_NUMBER}"
                )
                // Transition issue to "Done" (ensure JIRA has the "Done" transition)
                jiraTransitionIssue(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    transition: "Done"
                )
            }
        }
        failure {
            script {
                // Add comment to JIRA issue when build fails
                jiraAddComment(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    comment: "❌ Build failed! Build ID: ${env.BUILD_NUMBER}"
                )
                // Transition issue to "Reopened" (ensure JIRA has the "Reopened" transition)
                jiraTransitionIssue(
                    site: JIRA_SITE, 
                    issueKey: JIRA_ISSUE, 
                    transition: "Reopened"
                )
            }
        }
    }
}
