pipeline {
    agent any
    parameters {
        string(name: 'JIRA_ISSUE', defaultValue: 'ABC-123', description: 'Enter the JIRA Issue Key')
    }
    environment {
        SLACK_CHANNEL = '#general'
        SLACK_COLOR_SUCCESS = 'good'
        SLACK_COLOR_FAILURE = 'danger'
        JIRA_SITE = 'jenkins-jira'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                }
            }
        }
    }
    post {
        success {
            script {
                slackSend (
                    channel: env.SLACK_CHANNEL,
                    color: env.SLACK_COLOR_SUCCESS,
                    message: "✅ Build successful! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':tada:'
                )
                if (params.JIRA_ISSUE) {
                    jiraAddComment(issueKey: params.JIRA_ISSUE, comment: "✅ Build Successful! Build ID: ${env.BUILD_NUMBER}")
                    jiraTransitionIssue(issueKey: params.JIRA_ISSUE, transition: "Done")
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
        failure {
            script {
                slackSend (
                    channel: env.SLACK_CHANNEL,
                    color: env.SLACK_COLOR_FAILURE,
                    message: "❌ Build failed! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':no_entry_sign:'
                )
                if (params.JIRA_ISSUE) {
                    jiraAddComment(issueKey: params.JIRA_ISSUE, comment: "❌ Build Failed! Build ID: ${env.BUILD_NUMBER}")
                    jiraTransitionIssue(issueKey: params.JIRA_ISSUE, transition: "Reopen")
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
    }
}
