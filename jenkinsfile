pipeline {
    agent any
    environment {
        JIRA_SITE = 'jenkins-jira'  // Ensure this matches your Jenkins JIRA config
        JIRA_ISSUE = 'SMS-7'  // Replace with your actual issue key
    }
    stages {
        stage('Verify JIRA Access') {
            steps {
                script {
                    try {
                        jiraAddComment site: env.JIRA_SITE, idOrKey: env.JIRA_ISSUE, comment: "✅ Jenkins Pipeline is working!"
                        echo "✅ JIRA Access Verified!"
                    } catch (Exception e) {
                        echo "❌ JIRA Access Failed: ${e.getMessage()}"
                    }
                }
            }
        }
    }
}
