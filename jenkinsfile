pipeline {
    agent any
    environment {
        JIRA_SITE = 'jenkins-jira'
        JIRA_ISSUE = 'SMS-7'  // Ensure this exists in JIRA
    }
    stages {
        stage('Verify JIRA Access') {
            steps {
                script {
                    try {
                        jiraAddComment idOrKey: env.JIRA_ISSUE, comment: "Testing JIRA Access from Jenkins"
                        echo "JIRA Access Verified!"
                    } catch (Exception e) {
                        echo "JIRA Access Failed: ${e.getMessage()}"
                    }
                }
            }
        }
    }
}
