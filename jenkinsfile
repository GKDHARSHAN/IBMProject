pipeline { 
    agent any
    environment {
        SLACK_CHANNEL = '#general'  
        SLACK_COLOR_SUCCESS = 'good'        
        SLACK_COLOR_FAILURE = 'danger'
        JIRA_SITE = 'jenkins-jira'  // Your Jira site configured in Jenkins
        JIRA_ISSUE = 'SMS-7'        // Replace with the actual Jira issue ID
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo "JIRA Issue Key: ${JIRA_ISSUE}"
                    echo 'Building the project...'
                    // Uncomment below to fail the build intentionally
                    // error 'Build failed intentionally!'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Add test steps here
                }
            }
        }
    }
    post {
        success {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: SLACK_COLOR_SUCCESS, 
                    message: "✅ Build successful! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':tada:'
                )

                // Add a comment to the Jira issue
                jiraComment( 
                    issueKey: JIRA_ISSUE, 
                    comment: "✅ Build Successful! Build ID: ${env.BUILD_NUMBER}"
                )

                // Transition Jira issue to "Done"
                jiraTransitionIssue(
                    issueKey: JIRA_ISSUE, 
                    transition: "Done"
                )
            }
        }
        failure {
            script {
                slackSend (
                    channel: SLACK_CHANNEL, 
                    color: SLACK_COLOR_FAILURE, 
                    message: "❌ Build failed! Build ID: ${env.BUILD_NUMBER}",
                    username: 'jenkins',
                    iconEmoji: ':no_entry_sign:'
                )

                // Add a comment to the Jira issue in case of failure
                jiraComment( 
                    issueKey: JIRA_ISSUE, 
                    comment: "❌ Build Failed! Build ID: ${env.BUILD_NUMBER}"
                )

                // Transition Jira issue to "Reopen" in case of failure
                jiraTransitionIssue(
                    issueKey: JIRA_ISSUE, 
                    transition: "Reopen"
                )
            }
        }
    }
}
