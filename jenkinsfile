pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
    }
    post {
        always {
            slackSend(
                channel: '#general',
                color: 'good', // 'good' for green, 'danger' for red, or any hex color
                message: "Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL}) completed.",
                tokenCredentialId: 'slack-token-id' // Replace with your Slack token credential ID
            )
        }
    }
}
