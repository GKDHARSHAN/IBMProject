pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                }
            }
        }
    }

    post {
        always {
            slackSend(
                channel: '#general',
                color: 'good', // 'good' for green, 'danger' for red, or any hex color
                message: "Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL}) completed.",
                tokenCredentialId: 'slack-token-id'
                )
        }
    }
}
