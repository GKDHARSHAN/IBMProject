pipeline {
    agent any
    environment {
        SLACK_CHANNEL = '#general'
        SLACK_COLOR_SUCCESS = 'good'
        SLACK_COLOR_FAILURE = 'danger'
        JIRA_SITE = 'jenkins-jira'
        JIRA_ISSUE = 'SMS-7'  // ✅ Hardcoded JIRA Issue Key
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                }
            }
        }
    }
    post {
        success {
            script {
                echo "JIRA Issue Key: ${env.JIRA_ISSUE}"

                if (env.JIRA_ISSUE?.trim()) {
                    jiraAddComment(
                        issueKey: env.JIRA_ISSUE,  // ✅ Correct step for adding comments
                        comment: "✅ Build Successful! Build ID: ${env.BUILD_NUMBER}"
                    )
                    jiraIssueTransition(
                        issueKey: env.JIRA_ISSUE,  // ✅ Correct step for transitioning issues
                        transition: "Done"
                    )
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
        failure {
            script {
                echo "JIRA Issue Key: ${env.JIRA_ISSUE}"

                if (env.JIRA_ISSUE?.trim()) {
                    jiraAddComment(
                        issueKey: env.JIRA_ISSUE,
                        comment: "❌ Build Failed! Build ID: ${env.BUILD_NUMBER}"
                    )
                    jiraIssueTransition(
                        issueKey: env.JIRA_ISSUE,
                        transition: "Reopen"
                    )
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
    }
}
