pipeline {
    agent any
    parameters {
        string(name: 'JIRA_ISSUE', defaultValue: 'SMS-7', description: 'Enter the JIRA Issue Key')
    }
    environment {
        SLACK_CHANNEL = '#general'
        SLACK_COLOR_SUCCESS = 'good'
        SLACK_COLOR_FAILURE = 'danger'
        JIRA_SITE = 'jenkins-jira'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                }
            }
        }
    }
    post {
        success {
            script {
                echo "JIRA Issue Key: ${params.JIRA_ISSUE}"  // Debugging

                if (params.JIRA_ISSUE?.trim()) {
                    jiraComment(
                        site: env.JIRA_SITE,
                        issueKey: params.JIRA_ISSUE,
                        body: "✅ Build Successful! Build ID: ${env.BUILD_NUMBER}"
                    )
                    jiraTransitionIssue(
                        site: env.JIRA_SITE,
                        issueKey: params.JIRA_ISSUE,
                        transition: "Done"
                    )
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
        failure {
            script {
                echo "JIRA Issue Key: ${params.JIRA_ISSUE}"  // Debugging

                if (params.JIRA_ISSUE?.trim()) {
                    jiraComment(
                        site: env.JIRA_SITE,
                        issueKey: params.JIRA_ISSUE,
                        body: "❌ Build Failed! Build ID: ${env.BUILD_NUMBER}"
                    )
                    jiraTransitionIssue(
                        site: env.JIRA_SITE,
                        issueKey: params.JIRA_ISSUE,
                        transition: "Reopen"
                    )
                } else {
                    echo "⚠️ No JIRA issue key provided, skipping JIRA update."
                }
            }
        }
    }
}
